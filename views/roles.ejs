<div class="row mt-5">
  <div class="col-md-9 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3">
        <i class="fas fa-user-tag"></i> Manage User Roles
      </h1>
      <%- include('partials/messages') %>
      <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col">Role Name</th>
            <th scope="col">Description</th>
            <th scope="col">Members</th>
            <th scope="col">Actions</th>
          </tr>
        </thead>
        <tbody>
          <form action="/dashboard/roles" method="POST">
            <% if(typeof role != 'undefined'){ %>
            <% role.forEach(function(role,index) { %>
            <form action="/dashboard/roles" method="POST">
              <tr>
                <th scope="row">
                  <%= role[0] %> 
                  <% if(role[2]){ %>
                  <p><small>System Role</small></p>
                  <% } %>
                </th>
                <td><%= role[1] %></td>
                <td> ... </td>
                <td><button class="btn btn-primary"><i class="fas fa-edit"></i></button>
                  <% if(role[2]){ %>
                  <button class="btn btn-danger"><i class="fas fa-trash-alt"></i></button>
                  <% } %>
                </td>
              </tr>
            </form>
            <% }); %>
            <% } %>
        </tbody>
      </table>
      <p class="lead mt-4"><a href="/dashboard">Cancel</a></p>
    </div>
  </div>
</div>