<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3">
        <i class="fas fa-user"></i> User Profile
      </h1>

      <%- include('partials/messages') %>
      <form action="/users/register" method="POST">
        <div class="form-group">
          <label for="name">Name</label>
          <input type="name" id="name" name="name" class="form-control" placeholder="Enter Name"
            value="<%= typeof name != 'undefined' ? name : '' %>" />
        </div>
        <p>Groups <br>
          <% if(typeof role != 'undefined'){ %>
          <% role.forEach(function(role) { %>
          <button type="button" class="btn btn-outline-secondary" data-toggle="popover" data-placement="bottom"
            data-trigger="focus" title="<%= role %>" data-content="Description of <%= role %>"><%= role %></button>
          <% }); %>
          <% } %>
        </p>
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email"
            value="<%= typeof email != 'undefined' ? email : '' %>" />
        </div>

        <button type="submit" class="btn btn-primary btn-block">
          Update
        </button>
      </form>
      <p class="lead mt-4"><a href="/dashboard">Cancel Update</a></p>
    </div>
  </div>
</div>