<div class="row justify-content-center">
  <h2>
    <i class="fas fa-user"></i> User Profile
  </h2></div>
  <div class="row ml-4"><%- include('partials/messages') %>
</div>
<div class="row ml-4">
  
  <form action="/dashboard/profile/update" method="POST">
    <div class="form-group">
      <label for="email">Email</label>
      <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email" disabled
        value="<%= typeof email != 'undefined' ? email : '' %>" />
    </div>
    <div class="form-group">
      <label for="name">Name</label>
      <input type="name" id="name" name="name" class="form-control" placeholder="Enter Name"
        value="<%= typeof name != 'undefined' ? name : '' %>" />
    </div>
    <div class="form-group">
      <p>Group Membership</p>
      <% if(typeof role != 'undefined'){ %>
      <% role.forEach(function(role) { %>
      <button type="button" class="btn btn-outline-secondary" data-toggle="popover" data-placement="bottom"
        data-trigger="focus" title="<%= role %>" data-content="Description of <%= role %>"><%= role %></button>
      <% }); %>
      <% } %>
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
    <a class="btn btn-danger" href="/dashboard" role="button">Cancel</a>
  </form>
</div>